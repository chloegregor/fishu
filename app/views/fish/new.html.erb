<div class="tank">
  <%= image_tag 'https://res.cloudinary.com/detoat4si/image/upload/v1709818174/sac_vzkktu.png', style:"width: 100%;" %>
</div>

<div class="fish">
  <%= image_tag 'https://res.cloudinary.com/detoat4si/image/upload/v1709818038/fishi_hvnpfp.png', style:"width: #{50}%;" %>
</div>

<div class="formulaire">
  <%= form_with model: @fish, url: tank_fish_index_path(@tank) do |f| %>
    <%= f.text_field :name, class:'form' %>
    <%= f.submit "Nomme ton poisson", class:'form' %>
  <% end %>
</div>
